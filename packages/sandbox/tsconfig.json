{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "ESNext",
    "experimentalDecorators": true,
    "lib": ["ES2018","dom"],
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "es",
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
