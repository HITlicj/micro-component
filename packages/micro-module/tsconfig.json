{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "experimentalDecorators": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "es",
    "sourceMap": true,
    "moduleResolution": "nodenext"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
